<div class="row">
  <%= form_for @contact, class: 'col s12' do |f| %>
    <div class="row">
      <div class="col s4">
        <%= f.text_field :first_name, required: true, placeholder: "First Name" %>
      </div>
      <div class="col s4">
        <%= f.text_field :last_name, placeholder: "Last Name" %>
      </div>
      <div class="col s4">
        <%= f.email_field :email, required: true, placeholder: "Email" %>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <%= f.text_field :message, as: :text, required: true, placeholder: "Message", multiline: true %>
      </div>
    </div>
    <div>
      <%= f.submit "Get in touch!", class: 'btn waves-effect waves-light amber darken-2' %>
    </div>
  <% end %>
</div>
